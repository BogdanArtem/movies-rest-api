{
  "openapi": "3.0.0",
  "info": {
    "title": "Movie Database",
    "description": "This is REST-API interface for managing movie database",
    "contact": {
      "email": "you@your-company.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "https://localhost/api/docs",
      "description": "SwaggerHub API Auto Mocking"
    }
  ],
  "tags": [
    {
      "name": "admins",
      "description": "Secured Admin-only calls"
    },
    {
      "name": "registered",
      "description": "Operations available to registred users"
    },
    {
      "name": "public",
      "description": "Operations avaliable to any user"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "tags": [
          "admins"
        ],
        "summary": "searches inventory",
        "description": "By passing in the appropriate options, you can search for\navailable inventory in the system\n",
        "operationId": "searchInventory",
        "parameters": [
          {
            "name": "searchString",
            "in": "query",
            "description": "pass an optional search string for looking up inventory",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "skip",
            "in": "query",
            "description": "number of records to skip for pagination",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "minimum": 0,
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "maximum number of records to return",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "maximum": 50,
              "minimum": 0,
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "search results matching criteria",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter"
          }
        }
      },
      "post": {
        "tags": [
          "admins"
        ],
        "summary": "adds an inventory item",
        "description": "Adds an item to the system",
        "operationId": "addInventory",
        "requestBody": {
          "description": "Inventory item to add",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "item created"
          },
          "400": {
            "description": "invalid input, object invalid"
          },
          "409": {
            "description": "an existing item already exists"
          }
        }
      }
    },
    "/movies": {
      "get": {
        "tags": [
          "admin"
        ],
        "summary": "searches movie",
        "description": "By passing in the movie id, you can retrieve all the movie info\n",
        "operationId": "searchMovie",
        "responses": {
          "200": {
            "description": "search results matching criteria",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Movie"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "required": [
          "f_name",
          "is_admin",
          "l_name",
          "pass_hash",
          "user_id"
        ],
        "type": "object",
        "properties": {
          "user_id": {
            "type": "integer",
            "format": "int32",
            "example": 15
          },
          "f_name": {
            "type": "string",
            "example": "John"
          },
          "l_name": {
            "type": "string",
            "example": "Johnson"
          },
          "is_admin": {
            "type": "boolean"
          },
          "pass_hash": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "Director": {
        "required": [
          "director_id",
          "f_name",
          "l_name"
        ],
        "type": "object",
        "properties": {
          "director_id": {
            "type": "integer",
            "example": 34
          },
          "f_name": {
            "type": "string",
            "example": "Steven"
          },
          "l_name": {
            "type": "string",
            "example": "Spilberg"
          }
        }
      },
      "Genre": {
        "required": [
          "genre_id",
          "name"
        ],
        "type": "object",
        "properties": {
          "genre_id": {
            "type": "integer",
            "example": 22
          },
          "name": {
            "type": "string",
            "example": "Comedy"
          },
          "movie": {
            "$ref": "#/components/schemas/Movie"
          }
        }
      },
      "Movie": {
        "required": [
          "date",
          "director",
          "genre",
          "movie_id",
          "name",
          "poster_url",
          "rating",
          "user"
        ],
        "type": "object",
        "properties": {
          "movie_id": {
            "type": "integer",
            "example": 7
          },
          "director": {
            "$ref": "#/components/schemas/Director"
          },
          "genre": {
            "$ref": "#/components/schemas/Genre"
          },
          "user": {
            "$ref": "#/components/schemas/User"
          },
          "date": {
            "type": "string",
            "format": "date",
            "example": "2003-01-07"
          },
          "name": {
            "type": "string",
            "example": "The Life of David Gale"
          },
          "description": {
            "type": "string",
            "example": "The Life of David Gale is a 2003 drama film directed by Alan Parker and written by Charles Randolph"
          },
          "rating": {
            "type": "integer",
            "example": 10
          },
          "poster_url": {
            "type": "string",
            "format": "url"
          }
        }
      }
    }
  }
}